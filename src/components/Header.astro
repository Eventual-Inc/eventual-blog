---
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<a href="/" class="logo">
			<img src="/eventual-logo.svg" alt="Eventual" class="logo-img" />
			<span class="logo-text">blog</span>
		</a>
		<div class="nav-links">
			<a href="/">home</a>
			<a href="/blog">blog</a>
			<a href="https://eventual.ai" target="_blank">eventual.ai</a>
		</div>
	</nav>
</header>
<style>
	header {
		background: #000;
		border-bottom: 1px solid #222;
		padding: 0 1.5em;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		max-width: 960px;
		margin: 0 auto;
		height: 64px;
	}
	.logo {
		display: flex;
		align-items: center;
		gap: 0.5em;
		text-decoration: none;
	}
	.logo-img {
		height: 24px;
		width: auto;
		filter: brightness(0) invert(1);
	}
	.logo-text {
		font-family: "Favorit Mono", monospace;
		font-size: 14px;
		color: #888;
		text-transform: lowercase;
	}
	.nav-links {
		display: flex;
		gap: 1.5em;
	}
	.nav-links a {
		font-family: "Favorit Mono", monospace;
		font-size: 14px;
		color: #fff;
		text-decoration: none;
		text-transform: lowercase;
		transition: color 0.2s;
	}
	.nav-links a:hover {
		color: #ff00ff;
		text-decoration: none;
	}
</style>
