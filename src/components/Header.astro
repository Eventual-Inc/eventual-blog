---
import { SITE_TITLE } from '../consts';
const base = import.meta.env.BASE_URL;
---

<header>
	<nav>
		<a href={base} class="logo">
			<img src={`${base}eventual-logo.svg`} alt="Eventual" class="logo-img" />
		</a>
		<div class="nav-links">
			<a href={base}>home</a>
			<a href={base}>blog</a>
			<a href="https://eventual.ai" target="_blank">eventual.ai</a>
		</div>
	</nav>
</header>
<style>
	header {
		background: #000;
		border-bottom: 1px solid #222;
		padding: 0 1.5em;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		max-width: 1440px;
		margin: 0 auto;
		height: 84px;
		padding: 0 30px;
	}
	.logo {
		display: flex;
		align-items: center;
		text-decoration: none;
	}
	.logo-img {
		height: 20px;
		width: auto;
	}
	.nav-links {
		display: flex;
		gap: 1.5em;
	}
	.nav-links a {
		font-family: "Times Now", Georgia, serif;
		font-size: 16px;
		color: #fff;
		text-decoration: none;
		text-transform: lowercase;
		transition: color 0.2s;
	}
	.nav-links a:hover {
		color: #ff00ff;
		text-decoration: none;
	}
</style>
