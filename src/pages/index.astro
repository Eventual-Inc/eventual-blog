---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<div class="hero">
				<h1>Eventual Blog</h1>
				<p>Engineering insights from the team at Eventual, Inc.</p>
				<a href={`${import.meta.env.BASE_URL}/blog/`} class="cta">read the blog</a>
			</div>
		</main>
		<Footer />
	</body>
</html>

<style>
	.hero {
		text-align: center;
		padding: 4em 0;
	}
	.hero h1 {
		font-family: "Times Now", Georgia, serif;
		font-size: 3em;
		font-weight: 300;
		margin-bottom: 0.5em;
	}
	.hero p {
		color: #888;
		font-size: 1.2em;
		margin-bottom: 2em;
	}
	.cta {
		font-family: "Favorit Mono", monospace;
		font-size: 14px;
		color: #ff00ff;
		border: 1px solid #ff00ff;
		padding: 0.75em 1.5em;
		text-decoration: none;
		text-transform: lowercase;
		transition: all 0.2s;
	}
	.cta:hover {
		background: #ff00ff;
		color: #000;
		text-decoration: none;
	}
</style>
